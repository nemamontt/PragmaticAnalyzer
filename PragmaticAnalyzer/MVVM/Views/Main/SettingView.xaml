<UserControl x:Class="PragmaticAnalyzer.MVVM.Views.Main.SettingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PragmaticAnalyzer.MVVM.Views"
             xmlns:vm="clr-namespace:PragmaticAnalyzer.MVVM.ViewModel.Main"
             d:DataContext="{d:DesignInstance vm:SettingViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Border Grid.Row="0"
                    Margin="5"
                    CornerRadius="6"
                    BorderThickness="1"
                    BorderBrush="Black">
                <Grid  Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0"
                          Margin="5">
                        <TextBlock Text="Настройка моделей Word2Vec"
                                   VerticalAlignment="Center"
                                   FontSize="30"
                                   FontFamily="Consolas" />
                    </Grid>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <ComboBox Grid.Column="0"
                                  Style="{StaticResource RoundedComboBoxStyle}"
                                  ItemsSource="{Binding WordTwoVecConfigs}"
                                  SelectedItem="{Binding SelectedWordTwoVecConfig}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding DisplayedName}" />
                                        <TextBlock Text=" — используется"
                                                   Visibility="{Binding IsUsed, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                   Foreground="Gray"
                                                   Margin="5,0,0,0" />
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <Button Grid.Column="1"
                                Content="Загрузить модель"
                                Style="{StaticResource OutlinedGrayButtonStyle}"
                                Command="{Binding UploadWordTwoVecModelCommand}" />

                        <Button Grid.Column="2"
                                Content="Обучить модель"
                                Style="{StaticResource OutlinedGrayButtonStyle}"
                                Command="{Binding TrainWordTwoVecModelCommand}" />
                    </Grid>

                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <ProgressBar Grid.Column="0"
                                     Style="{StaticResource RoundedProgressBarStyle}"
                                     IsIndeterminate="{Binding ProgressWordTwoVec}" />

                        <Button Grid.Column="1"
                                Content="Использовать модель"
                                Style="{StaticResource OutlinedGrayButtonStyle}"
                                Command="{Binding UseWordTwoVecModelCommand}" />

                        <Button Grid.Column="2"
                                Content="Удалить модель"
                                Style="{StaticResource OutlinedGrayButtonStyle}"
                                Command="{Binding DeleteWordTwoVecModelCommand}" />

                        <Button Grid.Column="3"
                                Content="Дообучить модель"
                                Style="{StaticResource OutlinedGrayButtonStyle}"
                                Command="{Binding RetrainWordTwoVecModelCommand}" />
                    </Grid>
                </Grid>
            </Border>

            <Border Grid.Row="1"
                    Margin="5"
                    CornerRadius="6"
                    BorderThickness="1"
                    BorderBrush="Black">
                <Grid  Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0"
                          Margin="5">
                        <TextBlock Text="Настройка моделей FastText"
                                   VerticalAlignment="Center"
                                   FontSize="30"
                                   FontFamily="Consolas" />
                    </Grid>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <ComboBox Grid.Column="0"
                                  Style="{StaticResource RoundedComboBoxStyle}"
                                  ItemsSource="{Binding FastTextConfigs}"
                                  SelectedItem="{Binding SelectedFastTextConfig, UpdateSourceTrigger=PropertyChanged}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding DisplayedName}" />
                                        <TextBlock Text=" — используется"
                                                   Visibility="{Binding IsUsed, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                   Foreground="Gray"
                                                   Margin="5,0,0,0" />
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <Button Grid.Column="1"
                                Content="Загрузить модель"
                                Style="{StaticResource OutlinedGrayButtonStyle}"
                                Command="{Binding UploadFastTextModelCommand}" />

                        <Button Grid.Column="2"
                                Content="Обучить модель"
                                Style="{StaticResource OutlinedGrayButtonStyle}"
                                Command="{Binding TrainFastTextModelCommand}" />
                    </Grid>

                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <ProgressBar Grid.Column="0"
                                     Style="{StaticResource RoundedProgressBarStyle}"
                                     IsIndeterminate="{Binding ProgressFastText}" />

                        <Button Grid.Column="1"
                                Content="Использовать модель"
                                Style="{StaticResource OutlinedGrayButtonStyle}"
                                Command="{Binding UseFastTextModelCommand}" />

                        <Button Grid.Column="2"
                                Content="Удалить модель"
                                Style="{StaticResource OutlinedGrayButtonStyle}"
                                Command="{Binding DeleteFastTextModelCommand}" />

                        <Button Grid.Column="3"
                                Content="Дообучить модель"
                                Style="{StaticResource OutlinedGrayButtonStyle}"
                                Command="{Binding RetrainFastTextModelCommand}" />
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>