<UserControl x:Class="PragmaticAnalyzer.MVVM.Views.Main.CreatorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PragmaticAnalyzer.MVVM.Views"
             xmlns:assist="clr-namespace:PragmaticAnalyzer.Assistant"
             xmlns:vmMain="clr-namespace:PragmaticAnalyzer.MVVM.ViewModel.Main"
             d:DataContext="{d:DesignInstance Type=vmMain:CreatorViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <UserControl.Resources>
        <assist:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0"
                BorderBrush="Black"
                BorderThickness="1"
                Margin="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="10*" />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="{Binding ColumnWidthDatabases}" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <ListBox Grid.Row="0"
                         ItemsSource="{Binding Databases}"
                         SelectedItem="{Binding SelectedDatabase}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <Button Grid.Row="1"
                        Margin="2"
                        Cursor="Hand"
                        Command="{Binding AddDatabaseCommand}">
                    <TextBlock Text="Создать БД"
                               FontSize="20"
                               FontFamily="Consolas" />
                </Button>

                <Button Grid.Row="2"
                        Margin="2"
                        Cursor="Hand"
                        Command="{Binding ChangeDatabaseCommand}"
                        CommandParameter="">
                    <TextBlock Text="Редактировать БД"
                               FontSize="20"
                               FontFamily="Consolas" />
                </Button>

                <Button Grid.Row="3"
                        Margin="2"
                        Cursor="Hand"
                        Command="{Binding DeleteDatabaseCommand}">
                    <TextBlock Text="Удалить БД"
                               FontSize="20"
                               FontFamily="Consolas" />
                </Button>

                <Button Grid.Column="1"
                        Grid.RowSpan="4"
                        Content=">"
                        Background="Transparent"
                        Cursor="Hand"
                        Command="{Binding ZoomCommand}"
                        CommandParameter="True" />
            </Grid>

        </Border>

        <Border Grid.Column="1"
                BorderBrush="Black"
                BorderThickness="1"
                Margin="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="10*" />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="{Binding ColumnWidthRecords}" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <ListBox Grid.Row="0"
                         ItemsSource="{Binding SelectedDatabase.Records}"
                         SelectedItem="{Binding SelectedRecord}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding IndexValue}" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <Button Grid.Row="1"
                        Margin="2"
                        Cursor="Hand"
                        Command="{Binding AddRecordCommand}"
                        CommandParameter="">
                    <TextBlock Text="Добавить запись"
                               FontSize="20"
                               FontFamily="Consolas" />
                </Button>

                <Button Grid.Row="2"
                        Margin="2"
                        Cursor="Hand"
                        Command="{Binding ChangeRecordCommand}"
                        CommandParameter="">
                    <TextBlock Text="Редактировать запись"
                               FontSize="20"
                               FontFamily="Consolas" />
                </Button>

                <Button Grid.Row="3"
                        Margin="2"
                        Cursor="Hand"
                        Command="{Binding DeleteRecordCommand}">
                    <TextBlock Text="Удалить запись"
                               FontSize="20"
                               FontFamily="Consolas" />
                </Button>

                <Button Grid.Column="1"
                        Grid.RowSpan="4"
                        Content=">"
                        Background="Transparent"
                        Cursor="Hand"
                        Command="{Binding ZoomCommand}"
                        CommandParameter="False" />
            </Grid>

        </Border>

        <ScrollViewer Grid.Column="3">
            <WrapPanel Visibility="{Binding SelectedRecord, Converter={StaticResource NullToVisibilityConverter}}">
                <Border BorderBrush="Black"
                        BorderThickness="1"
                        CornerRadius="5"
                        Padding="10"
                        Margin="5"
                        Width="400">
                    <StackPanel>
                        <TextBlock Text="Описание"
                                   FontWeight="Bold"
                                   FontSize="20"
                                   Margin="5" />
                        <TextBlock Text="{Binding SelectedRecord.Description}"
                                   Margin="5"
                                   FontSize="15"
                                   TextWrapping="Wrap" />
                    </StackPanel>
                </Border>

                <ItemsControl ItemsSource="{Binding SelectedRecord.Fields}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="Black"
                                    BorderThickness="1"
                                    CornerRadius="5"
                                    Padding="10"
                                    Width="400"
                                    Margin="5">
                                <StackPanel>
                                    <TextBlock Text="{Binding Key}"
                                               FontWeight="Bold"
                                               FontSize="20"
                                               Margin="5" />
                                    <TextBlock Text="{Binding Value}"
                                               Margin="5"
                                               FontSize="15" 
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </WrapPanel>
        </ScrollViewer>
    </Grid>
</UserControl>