<UserControl x:Class="PragmaticAnalyzer.MVVM.Views.Main.OntologyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:PragmaticAnalyzer.MVVM.Views"
             xmlns:vmMain="clr-namespace:PragmaticAnalyzer.MVVM.ViewModel.Main"
             d:DataContext="{d:DesignInstance Type=vmMain:OntologyViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Grid Grid.Row="1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <TreeView ItemsSource="{Binding Ontologys}">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="SelectedItemChanged">
                    <i:InvokeCommandAction Command="{Binding SelectedItemChangedCommand}"
                                           CommandParameter="{Binding SelectedItem, RelativeSource={RelativeSource AncestorType=TreeView}}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Entities}">
                    <TextBlock Text="{Binding Name}"
                               FontSize="15"
                               FontFamily="Consolas"
                               TextWrapping="Wrap"
                               Width="600" />
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
         
        <Border Grid.Column="1"
                Margin="5"
                BorderBrush="Black"
                BorderThickness="1">
            <ScrollViewer Margin="2">
                <TextBlock Text="{Binding SelectedItem.Description}"
                           FontSize="15"
                           TextWrapping="Wrap" 
                           FontFamily="Consolas"/>
            </ScrollViewer>
        </Border>

        <Border BorderBrush="Black"
                BorderThickness="1"
                Padding="2"
                Grid.Column="0"
                Grid.Row="1"
                Grid.ColumnSpan="3"
                Margin="4 4 2 4">
            <StackPanel Grid.Column="0"
                        Margin="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <Button Height="50"
                        Content="Загрузить"
                        Margin="2"
                        Command="{Binding LoadCommand}"
                        Cursor="Hand"
                        Width="150"
                        FontFamily="Consolas"
                        FontSize="16" />
                
                <Button Height="50"
                        Content="Добавить"
                        Margin="2"
                        Command="{Binding AddCommand}"
                        Cursor="Hand"
                        Width="150"
                        FontFamily="Consolas"
                        FontSize="16" />
                
                <Button Height="50"
                        Content="Изменить"
                        Margin="2"
                        Command="{Binding ChangeCommand}"
                        Cursor="Hand"
                        Width="150"
                        FontFamily="Consolas"
                        FontSize="16" />
                
                <Button Height="50"
                        Content="Удалить"
                        Margin="2"
                        Command="{Binding DeleteCommand}"
                        Cursor="Hand"
                        Width="150"
                        FontFamily="Consolas"
                        FontSize="16" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>