<Window x:Class="PragmaticAnalyzer.MVVM.Views.Main.RecordManagerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PragmaticAnalyzer.MVVM.Views.Main"
        xmlns:vmMain="clr-namespace:PragmaticAnalyzer.MVVM.ViewModel.Main"
        xmlns:cc="clr-namespace:PragmaticAnalyzer.CastomControls"
        d:DataContext="{d:DesignInstance Type=vmMain:CreatorViewModel}"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title="Работа с записью"
        Height="600"
        Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5.5*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                BorderBrush="Black"
                BorderThickness="1"
                Margin="5"
                CornerRadius="6">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="0.2*" />
                    <RowDefinition Height="auto" />
                    <RowDefinition  Height="1*" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Описание"
                           FontSize="20"
                           FontFamily="Consolas"
                           FontWeight="Bold"
                           Margin="5 5 5 0" />

                <TextBox Grid.Row="1"
                         Text="{Binding EnteredDescriptionField}"
                         Style="{StaticResource RoundedTextBoxStyle}"
                         Margin=" 5 0 5 5" />

                <Border Grid.Row="2" 
                        BorderBrush="Black"
                        BorderThickness="1"
                        Height="1"/>

                <ScrollViewer Grid.Row="3"
                              Margin="5">
                    <ItemsControl ItemsSource="{Binding FieldInputs}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="Black"
                                        BorderThickness="1"
                                        CornerRadius="5"
                                        Padding="5"
                                        Margin="5">
                                    
                                    <Grid Height="200">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition />
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0"
                                                   Text="{Binding Name}"
                                                   FontSize="20"
                                                   FontFamily="Consolas"
                                                   FontWeight="UltraLight"
                                                   TextWrapping="Wrap"
                                                   Margin="5"/>

                                        <TextBox Grid.Row="1"
                                                 Text="{Binding Value}"
                                                 Style="{StaticResource RoundedTextBoxStyle}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Content="Применить"
                    Style="{StaticResource OutlinedGrayButtonStyle}"
                    Command="{Binding ApplyRecordManagerCommand}" />

            <Button Grid.Column="1"
                    Content="Назад"
                    Style="{StaticResource OutlinedGrayButtonStyle}"
                    Command="{Binding CloseRecordManagerCommand}" />
        </Grid>
    </Grid>
</Window>