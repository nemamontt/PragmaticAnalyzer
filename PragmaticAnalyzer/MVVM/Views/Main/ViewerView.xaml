<UserControl x:Class="PragmaticAnalyzer.MVVM.Views.Main.ViewerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:PragmaticAnalyzer.MVVM.ViewModel.Main"
             d:DataContext="{d:DesignInstance vm:ViewerViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="640"
             d:DesignWidth="1200">
    <Grid>
        <Viewbox Stretch="Uniform">
            <Canvas Height="640"
                    Width="1200">
                <Image Source="/Images/scheme.jpg"
                       Height="640"
                       Width="1200"
                       Canvas.Top="3" />

                <Grid Canvas.Top="469"
                      Canvas.Left="-37">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <Border  BorderBrush="Black"
                                 BorderThickness="1">
                            <TextBlock Text="Наименование БД"
                                       FontWeight="Bold"
                                       Margin="1"
                                       FontSize="8" />
                        </Border>
                        <Border  BorderBrush="Black"
                                 BorderThickness="1">
                            <TextBlock Text="Уязвимостей"
                                       Margin="1"
                                       FontSize="8" />
                        </Border>
                        <Border  BorderBrush="Black"
                                 BorderThickness="1">
                            <TextBlock Text="Угроз"
                                       Margin="1"
                                       FontSize="8" />
                        </Border>
                        <Border  BorderBrush="Black"
                                 BorderThickness="1">
                            <TextBlock Text="Техник и тактик"
                                       Margin="1"
                                       FontSize="8" />
                        </Border>
                        <Border  BorderBrush="Black"
                                 BorderThickness="1">
                            <TextBlock Text="Рисков ИБ"
                                       Margin="1"
                                       FontSize="8" />
                        </Border>
                        <Border  BorderBrush="Black"
                                 BorderThickness="1">
                            <TextBlock Text="Экслойтов"
                                       Margin="1"
                                       FontSize="8" />
                        </Border>
                        <Border  BorderBrush="Black"
                                 BorderThickness="1">
                            <TextBlock Text="Нарушителей"
                                       Margin="1"
                                       FontSize="8" />
                        </Border>
                        <Border  BorderBrush="Black"
                                 BorderThickness="1">
                            <TextBlock Text="Специалистов по ЗИ"
                                       Margin="1"
                                       FontSize="8" />
                        </Border>
                        <Border  BorderBrush="Black"
                                 BorderThickness="1">
                            <TextBlock Text="Мер защиты"
                                       Margin="1"
                                       FontSize="8" />
                        </Border>
                        <Border  BorderBrush="Black"
                                 BorderThickness="1">
                            <TextBlock Text="Эталонного состояния"
                                       Margin="1"
                                       FontSize="8" />
                        </Border>
                        <Border  BorderBrush="Black"
                                 BorderThickness="1">
                            <TextBlock Text="Текущего состояния"
                                       Margin="1"
                                       FontSize="8" />
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <Border  BorderBrush="Black"
                                 BorderThickness="1">
                            <TextBlock Text="Дата изменения"
                                       FontWeight="Bold"
                                       Margin="1"
                                       FontSize="8" />
                        </Border>
                        <Border  BorderBrush="Black"
                                 BorderThickness="1">
                            <TextBlock Text="{Binding LastUpdateConfig.Vulnerabilitie}"
                                       Margin="1"
                                       FontSize="8" />
                        </Border>
                        <Border  BorderBrush="Black"
                                 BorderThickness="1">
                            <TextBlock Text="{Binding LastUpdateConfig.Threat}"
                                       Margin="1"
                                       FontSize="8" />
                        </Border>
                        <Border  BorderBrush="Black"
                                 BorderThickness="1">
                            <TextBlock Text="{Binding LastUpdateConfig.Tactic}"
                                       Margin="1"
                                       FontSize="8" />
                        </Border>
                        <Border  BorderBrush="Black"
                                 BorderThickness="1">
                            <TextBlock Text="{Binding LastUpdateConfig.Outcomes}"
                                       Margin="1"
                                       FontSize="8" />
                        </Border>
                        <Border  BorderBrush="Black"
                                 BorderThickness="1">
                            <TextBlock Text="{Binding LastUpdateConfig.Exploit}"
                                       Margin="1"
                                       FontSize="8" />
                        </Border>
                        <Border  BorderBrush="Black"
                                 BorderThickness="1">
                            <TextBlock Text="{Binding LastUpdateConfig.Violator}"
                                       Margin="1"
                                       FontSize="8" />
                        </Border>
                        <Border  BorderBrush="Black"
                                 BorderThickness="1">
                            <TextBlock Text="{Binding LastUpdateConfig.Specialist}"
                                       Margin="1"
                                       FontSize="8" />
                        </Border>
                        <Border  BorderBrush="Black"
                                 BorderThickness="1">
                            <TextBlock Text="{Binding LastUpdateConfig.ProtectionMeasure}"
                                       Margin="1"
                                       FontSize="8" />
                        </Border>
                        <Border  BorderBrush="Black"
                                 BorderThickness="1">
                            <TextBlock Text="{Binding LastUpdateConfig.RefStatus}"
                                       Margin="1"
                                       FontSize="8" />
                        </Border>
                        <Border  BorderBrush="Black"
                                 BorderThickness="1">
                            <TextBlock Text="{Binding LastUpdateConfig.CurStatus}"
                                       Margin="1"
                                       FontSize="8" />
                        </Border>
                    </StackPanel>
                </Grid>

                <Button Content="Специалист по ЗИ"
                        Style="{StaticResource OutlinedGrayButtonStyle}"
                        Command="{Binding SetCurrentViewCommand}"
                        CommandParameter="{Binding ViewModelsService.SpecialistVm}"
                        Height="47"
                        Width="217"
                        Canvas.Left="-5" />

                <Button Content="Меры защиты"
                        Style="{StaticResource OutlinedGrayButtonStyle}"
                        Command="{Binding SetCurrentViewCommand}"
                        CommandParameter="{Binding ViewModelsService.ProtectionMeasureVm}"
                        Canvas.Left="187"
                        Canvas.Top="75"
                        Height="46"
                        Width="220" />

                <Button Content="Уязвимости"
                        Style="{StaticResource OutlinedGrayButtonStyle}"
                        Command="{Binding SetCurrentViewCommand}"
                        CommandParameter="{Binding ViewModelsService.VulnerabilitieVm}"
                        Canvas.Left="419"
                        Canvas.Top="149"
                        Height="46"
                        Width="210" />

                <Button Content="Нарушитель"
                        Style="{StaticResource OutlinedGrayButtonStyle}"
                        Command="{Binding SetCurrentViewCommand}"
                        CommandParameter="{Binding ViewModelsService.ViolatorVm}"
                        Canvas.Top="336"
                        Height="50"
                        Width="213"
                        Canvas.Left="-5" />

                <Button Content="Угрозы"
                        Style="{StaticResource OutlinedGrayButtonStyle}"
                        Command="{Binding SetCurrentViewCommand}"
                        CommandParameter="{Binding ViewModelsService.ThreatVm}"
                        Canvas.Left="185"
                        Canvas.Top="414"
                        Height="45"
                        Width="210" />

                <Button  Content="Техники и тактики"
                         Style="{StaticResource OutlinedGrayButtonStyle}"
                         Command="{Binding SetCurrentViewCommand}"
                         CommandParameter="{Binding ViewModelsService.TacticVm}"
                         Canvas.Left="416"
                         Canvas.Top="485"
                         Height="46"
                         Width="208" />

                <Button Content="Риски ИБ"
                        Style="{StaticResource OutlinedGrayButtonStyle}"
                        Command="{Binding SetCurrentViewCommand}"
                        CommandParameter="{Binding ViewModelsService.OutcomeVm}"
                        Canvas.Left="691"
                        Canvas.Top="225"
                        Height="45"
                        Width="209" />

                <Button Content="Эксплойты"
                        Style="{StaticResource OutlinedGrayButtonStyle}"
                        Command="{Binding SetCurrentViewCommand}"
                        CommandParameter="{Binding ViewModelsService.ExploitVm}"
                        Canvas.Left="670"
                        Canvas.Top="550"
                        Height="47"
                        Width="209" />

                <Button  Content="Данные о текущем состоянии ПФ СОПКА"
                         Style="{StaticResource OutlinedGrayButtonStyle}"
                         Command="{Binding SetCurrentViewCommand}"
                         CommandParameter="{Binding ViewModelsService.CurrentStatusVm}"
                         Canvas.Left="874"
                         Canvas.Top="402"
                         Height="46"
                         Width="320" />

                <Button Content="Данные об эталонном состоянии ПФ СОПКА"
                        FontSize="8"
                        Style="{StaticResource OutlinedGrayButtonStyle}"
                        Command="{Binding SetCurrentViewCommand}"
                        CommandParameter="{Binding ViewModelsService.ReferenceStatusVm}"
                        Canvas.Left="983"
                        Canvas.Top="156"
                        Height="47"
                        Width="211" />
            </Canvas>
        </Viewbox>
    </Grid>
</UserControl>