<UserControl x:Class="PragmaticAnalyzer.MVVM.Views.Viewer.VulnerabilitieNvdView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PragmaticAnalyzer.MVVM.Views.Viewer"
             mc:Ignorable="d"
             xmlns:cc="clr-namespace:PragmaticAnalyzer.CastomControls"
             xmlns:assist="clr-namespace:PragmaticAnalyzer.Assistant"
             xmlns:vm="clr-namespace:PragmaticAnalyzer.MVVM.ViewModel.Viewer"
             d:DataContext="{d:DesignInstance vm:VulnerabilitieNvdViewModel}"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <UserControl.Resources>
        <assist:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
    </UserControl.Resources>

    <ScrollViewer>
        <WrapPanel Visibility="{Binding SelectedVulnerabilitie, Converter={StaticResource NullToVisibilityConverter}}">
            <cc:LabeledValueBox LabelText="Идентификатор"
                                ValueText="{Binding SelectedVulnerabilitie.Identifier}" />

            <cc:LabeledValueBox LabelText="Описание уязвимости"
                                ValueText="{Binding SelectedVulnerabilitie.Description}" />

            <cc:LabeledValueBox LabelText="Дата публикации"
                                ValueText="{Binding SelectedVulnerabilitie.Published}" />

            <cc:LabeledValueBox LabelText="Дата последнего изменения"
                                ValueText="{Binding SelectedVulnerabilitie.LastModified}" />

            <cc:LabeledValueBox LabelText="Статус по выявленной уязвимости"
                                ValueText="{Binding SelectedVulnerabilitie.VulnStatus}" />

            <cc:LabeledValueBox LabelText="CVSS"
                                ValueText="{Binding SelectedVulnerabilitie.VectorString}" />

            <cc:LabeledValueBox LabelText="Полезные ссылки"
                                ValueText="{Binding SelectedVulnerabilitie.ReferencesToString}" />
        </WrapPanel>
    </ScrollViewer>
</UserControl>