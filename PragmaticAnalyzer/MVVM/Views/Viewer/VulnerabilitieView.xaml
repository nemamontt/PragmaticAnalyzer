<UserControl x:Class="PragmaticAnalyzer.MVVM.Views.Viewer.VulnerabilitieView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PragmaticAnalyzer.MVVM.Views"
             xmlns:assist="clr-namespace:PragmaticAnalyzer.Assistant"
             xmlns:vmViewer="clr-namespace:PragmaticAnalyzer.MVVM.ViewModel.Viewer"
             xmlns:view="clr-namespace:PragmaticAnalyzer.MVVM.Views.Viewer"
             xmlns:cc="clr-namespace:PragmaticAnalyzer.CastomControls"
             d:DataContext="{d:DesignInstance Type=vmViewer:VulnerabilitieViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="1000">
    <UserControl.Resources>
        <assist:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
        <assist:EnumDescriptionConverter x:Key="EnumDescriptionConverter" />
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="0.2*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Grid.Column="0"
                   Text="Идентификатор:"
                   Style="{StaticResource MainTextBlockStyle}" />

        <ListBox Grid.Row="1"
                 Grid.Column="0"
                 VirtualizingStackPanel.IsVirtualizing="True"
                 VirtualizingStackPanel.VirtualizationMode="Recycling"
                 Style="{StaticResource RoundedListBoxStyle}"
                 ItemContainerStyle="{StaticResource RoundedListBoxItemStyle}"
                 ItemsSource="{Binding DisplayedVulnerabilities}"
                 SelectedItem="{Binding SelectedVulnerabilitie}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Identifier}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <ComboBox Grid.Row="2"
                  Grid.Column="0"
                  ItemsSource="{Binding NamesDatabases}"
                  SelectedItem="{Binding SelectedDatabase}"
                  Style="{StaticResource RoundedComboBoxStyle}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Converter={StaticResource EnumDescriptionConverter}}" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <Border Grid.Row="0"
                Grid.Column="1"
                Grid.RowSpan="4"
                Margin="5"
                BorderBrush="Black"
                BorderThickness="1"
                CornerRadius="6">
            <ContentControl Content="{Binding CurrentView}"
                            Margin="5">
                <FrameworkElement.Resources>
                    <DataTemplate DataType="{x:Type vmViewer:VulnerabilitieFstecViewModel}">
                        <view:VulnerabilitieFstecView />
                    </DataTemplate>
                    
                    <DataTemplate DataType="{x:Type vmViewer:VulnerabilitieNvdViewModel}">
                        <view:VulnerabilitieNvdView />
                    </DataTemplate>
                    
                    <DataTemplate DataType="{x:Type vmViewer:VulnerabilitieJvnViewModel}">
                        <view:VulnerabilitieJvnView />
                    </DataTemplate>
                </FrameworkElement.Resources>
            </ContentControl>
        </Border>
      
        <Button Grid.Row="3"
                Grid.Column="0"
                Content="Обновить"
                Style="{StaticResource  OutlinedGrayButtonStyle}"
                Command="{Binding UpdateCommand}" />

        <TextBlock Grid.Row="0"
                   Grid.Column="2"
                   Text="Ход выполнения:"
                   Style="{StaticResource MainTextBlockStyle}" />

        <cc:FramedTextBlock Grid.Row="1"
                            Grid.Column="2"
                            Text="{Binding Status}" />

        <ProgressBar Grid.Row="2"
                     Grid.Column="2"
                     Style="{StaticResource RoundedProgressBarStyle}"
                     IsIndeterminate="{Binding Progress}" />

        <Button Grid.Row="3"
                Grid.Column="2"
                Content="Остановить"
                Style="{StaticResource OutlinedGrayButtonStyle}"
                Command="{Binding CancelUpdateCommand}" />
    </Grid>
</UserControl>