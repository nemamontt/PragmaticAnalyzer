<UserControl x:Class="PragmaticAnalyzer.MVVM.Views.Viewer.VulnerabilitieView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PragmaticAnalyzer.MVVM.Views"
             xmlns:assist="clr-namespace:PragmaticAnalyzer.Assistant"
             xmlns:vmViewer="clr-namespace:PragmaticAnalyzer.MVVM.ViewModel.Viewer"
             xmlns:cc="clr-namespace:PragmaticAnalyzer.CastomControls"
             d:DataContext="{d:DesignInstance Type=vmViewer:VulnerabilitieViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="1000">
    <UserControl.Resources>
        <assist:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
        <Style x:Key="Button"
               TargetType="Button">
            <Setter Property="Margin"
                    Value="3" />
            <Setter Property="FontSize"
                    Value="20" />
            <Setter Property="Cursor"
                    Value="Hand" />
            <Setter Property="FontFamily"
                    Value="Consolas" />
        </Style>
        <Style x:Key="HeadingTextBlock"
               TargetType="TextBlock">
            <Setter Property="FontSize"
                    Value="15" />
            <Setter Property="FontWeight"
                    Value="Bold" />
            <Setter Property="TextWrapping"
                    Value="Wrap" />
            <Setter Property="MinWidth"
                    Value="1000" />
        </Style>
        <Style x:Key="DynamicTextBlock"
               TargetType="TextBlock">
            <Setter Property="FontSize"
                    Value="15" />
            <Setter Property="TextWrapping"
                    Value="Wrap" />
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="0.2*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Grid.Column="0"
                   Text="Идентификатор:"
                   Style="{StaticResource MainTextBlockStyle}" />

        <ListBox Grid.Row="1"
                 Grid.Column="0"
                 VirtualizingStackPanel.IsVirtualizing="True"
                 VirtualizingStackPanel.VirtualizationMode="Recycling"
                 Style="{StaticResource RoundedListBoxStyle}"
                 ItemContainerStyle="{StaticResource RoundedListBoxItemStyle}"
                 ItemsSource="{Binding Vulnerabilities}"
                 SelectedItem="{Binding SelectedVulnerabilitie}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Identifier}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Border Grid.Row="0"
                Grid.Column="1"
                Grid.RowSpan="4"
                Margin="1"
                BorderBrush="Black"
                BorderThickness="1">
            <ScrollViewer Visibility="{Binding SelectedVulnerabilitie, Converter={StaticResource NullToVisibilityConverter}}">
                <StackPanel Margin="5">
                    <TextBlock Text="Идентификатор"
                               Style="{StaticResource HeadingTextBlock}" />
                    <TextBlock Text="{Binding SelectedVulnerabilitie.Identifier}"
                               Style="{StaticResource DynamicTextBlock}" />
                    <TextBlock Text="Наименование уязвимости"
                               Style="{StaticResource HeadingTextBlock}" />
                    <TextBlock Text="{Binding SelectedVulnerabilitie.Name}"
                               Style="{StaticResource DynamicTextBlock}" />
                    <TextBlock Text="Описание уязвимости"
                               Style="{StaticResource HeadingTextBlock}" />
                    <TextBlock Text="{Binding SelectedVulnerabilitie.Description}"
                               Style="{StaticResource DynamicTextBlock}" />
                    <TextBlock Text="Вендор ПО"
                               Style="{StaticResource HeadingTextBlock}" />
                    <TextBlock Text="{Binding SelectedVulnerabilitie.Vendor}"
                               Style="{StaticResource DynamicTextBlock}" />
                    <TextBlock Text="Название ПО"
                               Style="{StaticResource HeadingTextBlock}" />
                    <TextBlock Text="{Binding SelectedVulnerabilitie.NameSoftware}"
                               Style="{StaticResource DynamicTextBlock}" />
                    <TextBlock Text="Версия ПО"
                               Style="{StaticResource HeadingTextBlock}" />
                    <TextBlock Text="{Binding SelectedVulnerabilitie.Version}"
                               Style="{StaticResource DynamicTextBlock}" />
                    <TextBlock Text="Тип ПО"
                               Style="{StaticResource HeadingTextBlock}" />
                    <TextBlock Text="{Binding SelectedVulnerabilitie.Type}"
                               Style="{StaticResource DynamicTextBlock}" />
                    <TextBlock Text="Наименование ОС и тип аппаратной платформы"
                               Style="{StaticResource HeadingTextBlock}" />
                    <TextBlock Text="{Binding SelectedVulnerabilitie.NameOperatingSystem}"
                               Style="{StaticResource DynamicTextBlock}" />
                    <TextBlock Text="Класс уязвимости"
                               Style="{StaticResource HeadingTextBlock}" />
                    <TextBlock Text="{Binding SelectedVulnerabilitie.Class}"
                               Style="{StaticResource DynamicTextBlock}" />
                    <TextBlock Text="Дата выявления"
                               Style="{StaticResource HeadingTextBlock}" />
                    <TextBlock Text="{Binding SelectedVulnerabilitie.Date}"
                               Style="{StaticResource DynamicTextBlock}" />
                    <TextBlock Text="CVSS 2.0"
                               Style="{StaticResource HeadingTextBlock}" />
                    <TextBlock Text="{Binding SelectedVulnerabilitie.CvssTwo}"
                               Style="{StaticResource DynamicTextBlock}" />
                    <TextBlock Text="CVSS 3.0"
                               Style="{StaticResource HeadingTextBlock}" />
                    <TextBlock Text="{Binding SelectedVulnerabilitie.CvssThree}"
                               Style="{StaticResource DynamicTextBlock}" />
                    <TextBlock Text="Уровень опасности уязвимости"
                               Style="{StaticResource HeadingTextBlock}" />
                    <TextBlock Text="{Binding SelectedVulnerabilitie.DangerLevel}"
                               Style="{StaticResource DynamicTextBlock}" />
                    <TextBlock Text="Возможные меры по устранению"
                               Style="{StaticResource HeadingTextBlock}" />
                    <TextBlock Text="{Binding SelectedVulnerabilitie.Measure}"
                               Style="{StaticResource DynamicTextBlock}" />
                    <TextBlock Text="Наличие эксплойта"
                               Style="{StaticResource HeadingTextBlock}" />
                    <TextBlock Text="{Binding SelectedVulnerabilitie.Exploit}"
                               Style="{StaticResource DynamicTextBlock}" />
                    <TextBlock Text="Информация об устранении"
                               Style="{StaticResource HeadingTextBlock}" />
                    <TextBlock Text="{Binding SelectedVulnerabilitie.Information}"
                               Style="{StaticResource DynamicTextBlock}" />
                    <TextBlock Text="Ссылки на источники"
                               Style="{StaticResource HeadingTextBlock}" />
                    <TextBlock Text="{Binding SelectedVulnerabilitie.Links}"
                               Style="{StaticResource DynamicTextBlock}" />
                    <TextBlock Text="Идентификаторы других систем описаний уязвимости"
                               Style="{StaticResource HeadingTextBlock}" />
                    <TextBlock Text="{Binding SelectedVulnerabilitie.OtherIdentifier}"
                               Style="{StaticResource DynamicTextBlock}" />
                    <TextBlock Text="Прочая информация"
                               Style="{StaticResource HeadingTextBlock}" />
                    <TextBlock Text="{Binding SelectedVulnerabilitie.OtherInformation}"
                               Style="{StaticResource DynamicTextBlock}" />
                    <TextBlock Text="Связь с инцидентами ИБ"
                               Style="{StaticResource HeadingTextBlock}" />
                    <TextBlock Text="{Binding SelectedVulnerabilitie.Incident}"
                               Style="{StaticResource DynamicTextBlock}" />
                    <TextBlock Text="Способ эксплуатации"
                               Style="{StaticResource HeadingTextBlock}" />
                    <TextBlock Text="{Binding SelectedVulnerabilitie.OperatingMethod}"
                               Style="{StaticResource DynamicTextBlock}" />
                    <TextBlock Text="Способ устранения"
                               Style="{StaticResource HeadingTextBlock}" />
                    <TextBlock Text="{Binding SelectedVulnerabilitie.EliminationMethod}"
                               Style="{StaticResource DynamicTextBlock}" />
                    <TextBlock Text="Описание ошибки CWE"
                               Style="{StaticResource HeadingTextBlock}" />
                    <TextBlock Text="{Binding SelectedVulnerabilitie.DescriptionCwe}"
                               Style="{StaticResource DynamicTextBlock}" />
                    <TextBlock Text="Тип ошибки CWE"
                               Style="{StaticResource HeadingTextBlock}" />
                    <TextBlock Text="{Binding SelectedVulnerabilitie.Cwe}"
                               Style="{StaticResource DynamicTextBlock}" />
                </StackPanel>
            </ScrollViewer>
        </Border>

        <ProgressBar Grid.Row="2"
                     Grid.Column="0"
                     Style="{StaticResource RoundedProgressBarStyle}"
                     IsIndeterminate="{Binding Progress}" />

        <Button Grid.Row="3"
                Grid.Column="0"
                Content="Обновить"
                Style="{StaticResource  OutlinedGrayButtonStyle}"
                Command="{Binding UpdateCommand}" />

        <TextBlock Grid.Row="0"
                   Grid.Column="2"
                   Text="Ход выполнения:"
                   Style="{StaticResource MainTextBlockStyle}" />

        <cc:FramedTextBlock Grid.Row="1"
                            Grid.Column="2"
                            Grid.RowSpan="2"
                            Text="{Binding Status}" />
        
        <Button Grid.Row="3"
                Grid.Column="2"
                Content="Остановить"
                Style="{StaticResource OutlinedGrayButtonStyle}"
                Command="{Binding CancelUpdateCommand}" />
    </Grid>
</UserControl>