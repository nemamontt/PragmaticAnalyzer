<Window x:Class="PragmaticAnalyzer.MVVM.Views.Viewer.SpecialistManagerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PragmaticAnalyzer.MVVM.Views.Viewer"
        mc:Ignorable="d"
        xmlns:vmViewer="clr-namespace:PragmaticAnalyzer.MVVM.ViewModel.Viewer"
        d:DataContext="{d:DesignInstance Type=vmViewer:SpecialistViewModel}"
        Height="650"
        Width="500"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"
                    Orientation="Vertical"
                    HorizontalAlignment="Center">
            <TextBlock Text="Наименование ОВУ"
                       Style="{StaticResource MainTextBlockStyle}"
                       HorizontalAlignment="Center" />

            <TextBox Text="{Binding ManagerSpecialist.NameOrgan}"
                     Style="{StaticResource RoundedTextBoxStyle}"
                     Width="300"
                     Height="30" />
        </StackPanel>

        <Border Grid.Row="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Bottom"
                Height="1"
                Background="Black" />

        <StackPanel Grid.Row="1"
                    Orientation="Vertical"
                    HorizontalAlignment="Center">
            <TextBlock Text="Наименование вышестоящего ОВУ "
                       Style="{StaticResource MainTextBlockStyle}"
                       HorizontalAlignment="Center" />

            <TextBox Text="{Binding ManagerSpecialist.NameHighestOrgan}"
                     Style="{StaticResource RoundedTextBoxStyle}"
                     Width="300"
                     Height="30" />
        </StackPanel>

        <Border Grid.Row="1"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Bottom"
                Height="1"
                Background="Black" />

        <StackPanel Grid.Row="2"
                    Orientation="Vertical"
                    HorizontalAlignment="Center">
            <TextBlock Text="Наименование подчиненного ОВУ"
                       Style="{StaticResource MainTextBlockStyle}"
                       HorizontalAlignment="Center" />

            <TextBox Text="{Binding ManagerSpecialist.NameSubordinateOrgan}"
                     Style="{StaticResource RoundedTextBoxStyle}"
                     Width="300"
                     Height="30" />
        </StackPanel>

        <Border Grid.Row="2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Bottom"
                Height="1"
                Background="Black" />

        <StackPanel Grid.Row="3"
                    Orientation="Vertical"
                    HorizontalAlignment="Center">
            <TextBlock Text="Статус по выявленной уязвимости"
                       Style="{StaticResource MainTextBlockStyle}"
                       HorizontalAlignment="Center" />

            <TextBox Text="{Binding ManagerSpecialist.StatusVulnerability}"
                     Style="{StaticResource RoundedTextBoxStyle}"
                     Width="300"
                     Height="30" />
        </StackPanel>

        <Border Grid.Row="3"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Bottom"
                Height="1"
                Background="Black" />

        <StackPanel Grid.Row="4"
                    Orientation="Vertical"
                    HorizontalAlignment="Center">
            <TextBlock Text="Предпринятые действия"
                       Style="{StaticResource MainTextBlockStyle}"
                       HorizontalAlignment="Center" />

            <TextBox Text="{Binding ManagerSpecialist.ActionsTaken}"
                     Style="{StaticResource RoundedTextBoxStyle}"
                     Width="300"
                     Height="30" />
        </StackPanel>

        <Border Grid.Row="4"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Bottom"
                Height="1"
                Background="Black" />

        <StackPanel Grid.Row="5"
                    Orientation="Vertical"
                    HorizontalAlignment="Center">
            <TextBlock Text="Наименование СС СОПКА"
                       Style="{StaticResource MainTextBlockStyle}"
                       HorizontalAlignment="Center" />

            <TextBox Text="{Binding ManagerSpecialist.NameSoftware}"
                     Style="{StaticResource RoundedTextBoxStyle}"
                     Width="300"
                     Height="30" />
        </StackPanel>

        <Border Grid.Row="5"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Bottom"
                Height="1"
                Background="Black" />

        <StackPanel Grid.Row="6"
                    Orientation="Vertical"
                    HorizontalAlignment="Center">
            <TextBlock Text="Наименование взаимодействующих ОВУ "
                       Style="{StaticResource MainTextBlockStyle}"
                       HorizontalAlignment="Center" />

            <StackPanel Orientation="Horizontal">
                <TextBox  Text="{Binding NewInteractingOrgan}"
                          Style="{StaticResource RoundedTextBoxStyle}"
                          Width="150" 
                          Height="30"/>

                <Button Content="➕"
                        Style="{StaticResource OutlinedGrayButtonStyle}"
                        Command="{Binding AddInteractingOrgansCommand}" />

                <Button Content="➖"
                        Style="{StaticResource OutlinedGrayButtonStyle}"
                        Command="{Binding DeleteInteractingOrgansCommand}" />

                <ComboBox Width="150"
                          Style="{StaticResource RoundedComboBoxStyle}"
                          ItemsSource="{Binding ManagerSpecialist.NameInteractingOrgans}"
                          SelectedItem="{Binding SelectedInteractingOrgan}" />
            </StackPanel>
        </StackPanel>

        <Border Grid.Row="6"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Bottom"
                Height="1"
                Background="Black" />

        <StackPanel Grid.Row="7"
                    Orientation="Vertical"
                    HorizontalAlignment="Center">
            <TextBlock Text="Список принятых мер защиты"
                       Style="{StaticResource MainTextBlockStyle}"
                       HorizontalAlignment="Center" />

            <StackPanel Orientation="Horizontal">
                <TextBox Text="{Binding NewMeasure}"
                         Style="{StaticResource RoundedTextBoxStyle}"
                         Width="150"
                         Height="30"/>

                <Button Content="➕"
                        Style="{StaticResource OutlinedGrayButtonStyle}"
                        Command="{Binding AddMeasureCommand}" />

                <Button Content="➖"
                        Style="{StaticResource OutlinedGrayButtonStyle}"
                        Command="{Binding DeleteMeasureCommand}" />

                <ComboBox Width="150"
                          Style="{StaticResource RoundedComboBoxStyle}"
                          ItemsSource="{Binding ManagerSpecialist.UsingMeasures}"
                          SelectedItem="{Binding SelectedMeasure}" />
            </StackPanel>
        </StackPanel>

        <Border Grid.Row="7"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Bottom"
                Height="1"
                Background="Black" />

        <StackPanel Grid.Row="8"
                    Orientation="Vertical">
            <Button Content="Готово"
                    Style="{StaticResource OutlinedGrayButtonStyle}"
                    Command="{Binding DoneManagerCommand}" />

            <Button Content="Отмена"
                    Style="{StaticResource OutlinedGrayButtonStyle}"
                    Command="{Binding CancelManagerCommand}" />
        </StackPanel>
    </Grid>
</Window>