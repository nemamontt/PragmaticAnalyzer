<Window x:Class="PragmaticAnalyzer.MVVM.Views.Viewer.SpecialistManagerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PragmaticAnalyzer.MVVM.Views.Viewer"
        mc:Ignorable="d"
        Height="600"
        Width="500"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"
                    Orientation="Vertical"
                    HorizontalAlignment="Center">
            <TextBlock Text="Наименование ОВУ"
                       FontSize="15"
                       FontWeight="Bold"
                       FontFamily="Consolas"
                       HorizontalAlignment="Center" />
            <TextBox Text="{Binding ManagerSpecialist.NameOrgan}"
                     FontSize="15"
                     FontFamily="Consolas"
                     Width="300"
                     Height="20"
                     TextWrapping="Wrap" />
        </StackPanel>

        <StackPanel Grid.Row="1"
                    Orientation="Vertical"
                    HorizontalAlignment="Center">
            <TextBlock Text="Наименование вышестоящего ОВУ "
                       FontSize="15"
                       FontWeight="Bold"
                       FontFamily="Consolas" 
                       HorizontalAlignment="Center"/>
            <TextBox Text="{Binding ManagerSpecialist.NameHighestOrgan}"
                     FontSize="15"
                     FontFamily="Consolas"
                     TextWrapping="Wrap"
                     Width="300"
                     Height="20" />
        </StackPanel>

        <StackPanel Grid.Row="2"
                    Orientation="Vertical"
                    HorizontalAlignment="Center">
            <TextBlock Text="Наименование подчиненного ОВУ"
                       FontSize="15"
                       FontWeight="Bold"
                       FontFamily="Consolas" 
                       HorizontalAlignment="Center"/>
            <TextBox Text="{Binding ManagerSpecialist.NameSubordinateOrgan}"
                     FontSize="15"
                     FontFamily="Consolas"
                     TextWrapping="Wrap"
                     Width="300"
                     Height="20" />
        </StackPanel>

        <StackPanel Grid.Row="3"
                    Orientation="Vertical"
                    HorizontalAlignment="Center">
            <TextBlock Text="Статус по выявленной уязвимости"
                       FontSize="15"
                       FontWeight="Bold"
                       FontFamily="Consolas" 
                       HorizontalAlignment="Center"/>
            <TextBox Text="{Binding ManagerSpecialist.StatusVulnerability}"
                     FontSize="15"
                     FontFamily="Consolas"
                     TextWrapping="Wrap"
                     Width="300"
                     Height="20" />
        </StackPanel>

        <StackPanel Grid.Row="4"
                    Orientation="Vertical"
                    HorizontalAlignment="Center">
            <TextBlock Text="Предпринятые действия"
                       FontSize="15"
                       FontWeight="Bold"
                       FontFamily="Consolas"
                       HorizontalAlignment="Center"/>
            
            <TextBox Text="{Binding ManagerSpecialist.ActionsTaken}"
                     FontSize="15"
                     FontFamily="Consolas"
                     TextWrapping="Wrap"
                     Width="300"
                     Height="20" />
        </StackPanel>

        <StackPanel Grid.Row="5"
                    Orientation="Vertical"
                    HorizontalAlignment="Center">
            <TextBlock Text="Наименование СС СОПКА"
                       FontSize="15"
                       FontWeight="Bold"
                       FontFamily="Consolas" 
                       HorizontalAlignment="Center"/>
            <TextBox Text="{Binding ManagerSpecialist.NameSoftware}"
                     FontSize="15"
                     FontFamily="Consolas"
                     TextWrapping="Wrap"
                     Width="300"
                     Height="20" />
        </StackPanel>

        <StackPanel Grid.Row="6"
                    Orientation="Vertical"
                    HorizontalAlignment="Center">
            <TextBlock Text="Наименование взаимодействующих ОВУ "
                       FontSize="15"
                       FontWeight="Bold"
                       FontFamily="Consolas" 
                       HorizontalAlignment="Center"/>

            <StackPanel Orientation="Horizontal">
                <TextBox FontSize="15"
                         FontFamily="Consolas"
                         TextWrapping="Wrap"
                         Width="150"
                         Height="20"
                         Margin="1"
                         Text="{Binding NewInteractingOrgan}" />

                <Button Content="➕"
                        Cursor="Hand"
                        Margin="1"
                        Command="{Binding AddInteractingOrgansCommand}" />

                <Button Content="➖"
                        Cursor="Hand"
                        Margin="1"
                        Command="{Binding DeleteInteractingOrgansCommand}" />

                <ComboBox Width="150"
                          Margin="1"
                          ItemsSource="{Binding ManagerSpecialist.NameInteractingOrgans}"
                          SelectedItem="{Binding SelectedInteractingOrgan}" />
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="7"
                    Orientation="Vertical"
                    HorizontalAlignment="Center">
            <TextBlock Text="Список принятых мер защиты"
                       FontSize="15"
                       FontWeight="Bold"
                       FontFamily="Consolas" 
                       HorizontalAlignment="Center"/>

            <StackPanel Orientation="Horizontal">
                <TextBox FontSize="15"
                         FontFamily="Consolas"
                         TextWrapping="Wrap"
                         Width="150"
                         Height="20"
                         Margin="1"
                         Text="{Binding NewMeasure}" />

                <Button Content="➕"
                        Cursor="Hand"
                        Margin="1"
                        Command="{Binding AddMeasureCommand}" />

                <Button Content="➖"
                        Cursor="Hand"
                        Margin="1"
                        Command="{Binding DeleteMeasureCommand}" />

                <ComboBox Width="150"
                          Margin="1"
                          ItemsSource="{Binding ManagerSpecialist.UsingMeasures}"
                          SelectedItem="{Binding SelectedMeasure}" />
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="8"
                    Orientation="Vertical">
            <Button Content="Готово"
                    Height="50"
                    Cursor="Hand"
                    FontFamily="Consolas"
                    FontSize="20"
                    Margin="5"
                    Command="{Binding DoneManagerCommand}" />

            <Button Content="Отмена"
                    Height="50"
                    Cursor="Hand"
                    FontFamily="Consolas"
                    FontSize="20"
                    Margin="5"
                    Command="{Binding CancelManagerCommand}" />
        </StackPanel>
    </Grid>
</Window>