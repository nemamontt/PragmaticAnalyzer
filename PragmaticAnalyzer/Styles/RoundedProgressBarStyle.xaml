<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="RoundedProgressBarStyle"
           TargetType="ProgressBar">
        <Setter Property="Foreground"
                Value="#4CAF50" />
        <Setter Property="Background"
                Value="#E0E0E0" />
        <Setter Property="Margin"
                Value="5" />
        <Setter Property="HorizontalAlignment"
                Value="Stretch" />
        <Setter Property="VerticalAlignment"
                Value="Stretch" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ProgressBar">
                    <Grid x:Name="TemplateRoot"
                          ClipToBounds="True">
                        <!-- Фон -->
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6" />

                        <!-- Индикатор для IsIndeterminate -->
                        <Border x:Name="IndeterminateIndicator"
                                Background="{TemplateBinding Foreground}"
                                CornerRadius="4"
                                Width="100"
                                HorizontalAlignment="Left"
                                Visibility="Hidden">
                            <Border.RenderTransform>
                                <TranslateTransform x:Name="IndicatorTranslate"
                                                    X="0" />
                            </Border.RenderTransform>
                        </Border>

                        <!-- Обычное заполнение -->
                        <Border x:Name="PART_Indicator"
                                Background="{TemplateBinding Foreground}"
                                CornerRadius="6"
                                HorizontalAlignment="Left" />
                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsIndeterminate"
                                 Value="False">
                            <Setter TargetName="IndeterminateIndicator"
                                    Property="Visibility"
                                    Value="Hidden" />
                        </Trigger>

                        <Trigger Property="IsIndeterminate"
                                 Value="True">
                            <Setter TargetName="PART_Indicator"
                                    Property="Visibility"
                                    Value="Hidden" />
                            <Setter TargetName="IndeterminateIndicator"
                                    Property="Visibility"
                                    Value="Visible" />
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="IndicatorTranslate"
                                                         Storyboard.TargetProperty="X"
                                                         From="-50"
                                                         To="2000"
                                                         Duration="0:0:3"
                                                         RepeatBehavior="Forever" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>