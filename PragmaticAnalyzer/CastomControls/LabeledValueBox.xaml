<UserControl x:Class="PragmaticAnalyzer.CastomControls.LabeledValueBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PragmaticAnalyzer.CastomControls"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Border BorderBrush="Black"
            Background="White"
            CornerRadius="6"
            BorderThickness="2"
            Padding="10"
            Margin="5">
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding LabelText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                           FontSize="18"
                           FontFamily="Consolas"
                           FontWeight="Bold"
                           Margin="0 0 5 5"
                           VerticalAlignment="Center"/>

                <Button Content="📎"
                        Click="CopyButton_Click"
                        FontWeight="Normal"
                        ToolTip="Копировать"
                        Style="{StaticResource OutlinedGrayButtonStyle}" />
            </StackPanel>
          
            <TextBlock Text="{Binding ValueText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                       FontSize="15"
                       FontFamily="Consolas"
                       TextWrapping="Wrap"/>
        </StackPanel>
    </Border>
</UserControl>