<UserControl x:Class="PragmaticAnalyzer.CastomControls.ExtendedDownloadTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PragmaticAnalyzer.CastomControls"
             mc:Ignorable="d"
             d:DesignHeight="200"
             d:DesignWidth="600">
    <Border  Margin="5"
             CornerRadius="6"
             BorderThickness="1"
             BorderBrush="Black">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0"
                            Orientation="Horizontal"
                            Margin="2">
                    <StackPanel Orientation="Horizontal"
                                Margin="5 0 5 0">
                        <TextBlock Text="База данных:"
                                   FontWeight="Bold"
                                   FontSize="15"
                                   FontFamily="Consolas" />

                        <TextBlock Text="{Binding Title, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                   FontSize="15"
                                   FontFamily="Consolas"
                                   FontWeight="Bold" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                                Margin="5 0 0 0">
                        <TextBlock Text="("
                                   FontSize="15"
                                   FontFamily="Consolas" />

                        <TextBlock Text="Дата изменения:"
                                   FontSize="15"
                                   FontFamily="Consolas" />

                        <TextBlock Text="{Binding Time, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                   FontSize="15"
                                   FontFamily="Consolas"
                                   FontWeight="Light" />

                        <TextBlock Text=")"
                                   FontSize="15"
                                   FontFamily="Consolas" />
                    </StackPanel>
                </StackPanel>

                <Border Grid.Row="0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Bottom"
                        Height="1"
                        Background="Black" />
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="70" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="{Binding Text, RelativeSource={RelativeSource AncestorType=UserControl}}"
                           FontSize="15"
                           FontFamily="Consolas"
                           TextWrapping="Wrap"
                           VerticalAlignment="Top"
                           Margin="5" />

                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Button Grid.Row="0"
                            Content="..."
                            Style="{StaticResource OutlinedGrayButtonStyle}"
                            Command="{Binding RefreshLoadCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            Background="{Binding ButtonBackground, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            CommandParameter="{Binding RefreshCommandParameter, RelativeSource={RelativeSource AncestorType=UserControl}}" />

                    <Button Grid.Row="1"
                            Content="⟳"
                            Style="{StaticResource OutlinedGrayButtonStyle}"
                            Command="{Binding RefreshUpdateCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</UserControl>